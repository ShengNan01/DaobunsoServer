<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        android:background="#DDFFDD"
        android:visibility="visible"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context="service.serviceFragment">


        <!--「entries="@array/textFoodArray"」
                    指定textFoodArray所代表的字串陣列為清單內容-->
        <Spinner
            android:id="@+id/spServiceType"
            android:layout_width="229dp"
            android:layout_height="44dp"
            android:layout_marginBottom="24dp"
            android:entries="@array/spServiceType"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/spServiceTime"
            app:layout_constraintStart_toStartOf="@+id/spServiceTime" />

        <Spinner
            android:id="@+id/spServiceTime"
            android:layout_width="231dp"
            android:layout_height="0dp"

            android:layout_marginStart="8dp"
            android:layout_marginBottom="36dp"
            android:entries="@array/spServiceTime"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/etDate"
            app:layout_constraintStart_toStartOf="@+id/etDate" />

        <EditText
            android:id="@+id/etDate"
            android:layout_width="136dp"
            android:layout_height="47dp"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintBottom_toTopOf="@+id/etAddress"
            app:layout_constraintStart_toStartOf="@+id/etAddress" />

        <ImageButton
            android:id="@+id/btnCalendar"
            android:layout_width="59dp"
            android:layout_height="44dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#DDFFDD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/etDate"
            app:layout_constraintTop_toTopOf="@+id/etDate"
            app:srcCompat="@drawable/calendar" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="215dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="垃圾收取地點(詳細地址)"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textColorHint="#009688"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/etContactPerson"
            app:layout_constraintStart_toStartOf="@+id/etContactPerson" />

        <EditText
            android:id="@+id/etContactPerson"
            android:layout_width="155dp"
            android:layout_height="52dp"
            android:layout_marginBottom="24dp"
            android:ems="10"
            android:hint="聯絡人姓名"
            android:inputType="textPersonName"
            android:textColorHint="#009688"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/etContactPhone"
            app:layout_constraintStart_toStartOf="@+id/etContactPhone" />

        <EditText
            android:id="@+id/etContactPhone"
            android:layout_width="155dp"
            android:layout_height="52dp"
            android:layout_marginEnd="79dp"
            android:layout_marginBottom="59dp"
            android:ems="10"
            android:hint="聯絡人電話"
            android:inputType="phone"
            android:minHeight="48dp"
            android:textColorHint="#009688"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/btnToNewOrder"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/btnToNewOrder"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginBottom="49dp"
            android:background="@drawable/submit1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="205dp"
            android:layout_marginEnd="206dp"
            android:layout_marginBottom="113dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvServiceTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="選擇服務類型："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/spServiceType"
            app:layout_constraintEnd_toStartOf="@+id/spServiceType"
            app:layout_constraintTop_toTopOf="@+id/spServiceType"
            app:layout_constraintVertical_bias="0.409" />

        <TextView
            android:id="@+id/tvDatePickTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="72dp"
            android:text="選擇服務時段："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvDatePickTitle2"
            app:layout_constraintEnd_toEndOf="@+id/tvServiceTypeTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDatePickTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="56dp"
            android:text="選擇日期："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvAddressTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPhoneTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="168dp"
            android:text="電話："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvNameTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAddressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="44dp"
            android:text="地址："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvNameTitle"
            app:layout_constraintEnd_toEndOf="@+id/tvDatePickTitle2"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="56dp"
            android:text="姓名："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvPhoneTitle3"
            app:layout_constraintEnd_toEndOf="@+id/tvAddressTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/homepage_btn_service"
            android:layout_width="36dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/home" />

    </androidx.constraintlayout.widget.ConstraintLayout>


