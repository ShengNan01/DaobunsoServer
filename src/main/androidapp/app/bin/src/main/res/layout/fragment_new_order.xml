<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".service.newOrderFragment"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDFFDD"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--「entries="@array/textFoodArray"」
                    指定textFoodArray所代表的字串陣列為清單內容-->
        <TextView
            android:id="@+id/tvServiceTypeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="服務類型："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvPriceTitle"
            app:layout_constraintStart_toStartOf="@+id/tvPriceTitle" />

        <TextView
            android:id="@+id/tvPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="價格："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvServiceStartTitle"
            app:layout_constraintStart_toStartOf="@+id/tvServiceStartTitle" />

        <TextView
            android:id="@+id/tvServiceStartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="服務開始日期："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvServiceEndTitle"
            app:layout_constraintStart_toStartOf="@+id/tvServiceEndTitle" />

        <TextView
            android:id="@+id/tvServiceTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:text="服務時段："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/dividerService"
            app:layout_constraintStart_toStartOf="@+id/tvTotalPriceTitle" />

        <TextView
            android:id="@+id/tvServiceEndTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="服務結束日期："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvServiceTimeTitle"
            app:layout_constraintStart_toStartOf="@+id/tvServiceTimeTitle" />

        <TextView
            android:id="@+id/tvTotalPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="68dp"
            android:gravity="center"
            android:text="總金額："
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dividerService" />

        <View
            android:id="@+id/dividerService"
            android:layout_width="345dp"
            android:layout_height="3dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/buttonview"
            app:layout_constraintBottom_toTopOf="@+id/tvTotalPrice"
            app:layout_constraintEnd_toEndOf="@+id/tvTotalPrice"
            app:layout_constraintStart_toStartOf="@+id/tvTotalPriceTitle" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="210dp"
            android:gravity="center"
            android:hint="totalprice"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvServiceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:hint="service"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tvServicePrice"
            app:layout_constraintEnd_toEndOf="@+id/tvServicePrice"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="@+id/tvServicePrice" />

        <TextView
            android:id="@+id/tvServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:hint="price"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tvStartDate"
            app:layout_constraintEnd_toEndOf="@+id/tvStartDate"
            app:layout_constraintHorizontal_bias="0.269"
            app:layout_constraintStart_toStartOf="@+id/tvStartDate" />

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:hint="startdate"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tvEndDate"
            app:layout_constraintEnd_toEndOf="@+id/tvEndDate"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="@+id/tvEndDate" />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:hint="enddate"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/tvServiceEndTime"
            app:layout_constraintEnd_toEndOf="@+id/tvServiceEndTime"
            app:layout_constraintStart_toStartOf="@+id/tvServiceEndTime" />

        <TextView
            android:id="@+id/tvServiceEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:hint="servicetime"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/dividerService"
            app:layout_constraintEnd_toEndOf="@+id/tvTotalPrice" />

        <TextView
            android:id="@+id/btnToConfirmOrder"
            android:layout_width="271dp"
            android:layout_height="50dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/paymentbtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
    android:id="@+id/homepage_btn_confirm_order"
    android:layout_width="36dp"
    android:layout_height="53dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/home" />

    </androidx.constraintlayout.widget.ConstraintLayout>

